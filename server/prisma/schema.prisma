generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//uuid = Universal Unique ID
//@ mostra para o prisma a PK

model User {
  id String @id @default(uuid())
  githubId Int @unique
  name String
  login String
  avatarUrl String
}

model Memory{
  id String @id @default(uuid())
  coverUrl String
  content String
  isPublic Boolean @default(false)
  createdAt DateTime @default(now())

  user User
}